{
  "ruby.lsp": "ruby-lsp",
  "ruby.languageServer": "ruby-lsp",
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "codeLens": true,
    "completion": true,
    "definition": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "references": true,
    "semanticHighlighting": true,
    "signatureHelp": true,
    "typeHierarchy": true,
    "workspaceSymbol": true
  },
  "rubyLsp.rubyVersionManager": "none",
  "rubyLsp.customRubyCommand": "bundle exec ruby-lsp",
  "rubyLsp.formatter": "auto",
  "rubyLsp.linters": ["rubocop"],
  "rubyLsp.indexing": {
    "excludedPatterns": [
      "**/node_modules/**",
      "**/vendor/**",
      "**/tmp/**",
      "**/log/**"
    ]
  },
  "rubyLsp.bundleGemfile": "/rails/Gemfile",
  "rubyLsp.pullDiagnosticsOn": "both",
  "files.associations": {
    "*.erb": "erb",
    "*.html.erb": "erb",
    "*.html.slim": "slim"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.formatOnType": true
  }
}